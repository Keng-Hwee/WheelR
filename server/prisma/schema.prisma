generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id          Int          @id @default(autoincrement())
  name        String
  wheelGroups WheelGroup[]
}

model WheelGroup {
  id          Int       @id @default(autoincrement())
  name        String
  value       Float
  portfolioId Int
  porfolio    Portfolio @relation(fields: [portfolioId], references: [id])
  wheels      WheelItem[]
}

model WheelItem {
  id             Int        @id @default(autoincrement())
  name           String
  description    String
  value          Float
  wheelGroupId   Int
  wheelGroup     WheelGroup @relation(fields: [wheelGroupId], references: [id])
  contracts      Contract[]
}

model Contract {
  id              Int @id @default(autoincrement())
  ticker          String
  strikePrice     String
  expirationDate  DateTime
  closed          Boolean
  closeDate       DateTime
  closePrice      Float
  openAt          DateTime
  premium         Float
  wheelItemId     Int
  wheelItem       WheelItem @relation(fields: [wheelItemId], references: [id])
}


